@media (max-width: 1280px) { 
  #projects {
    margin-left: 50px;
    margin-right: 50px;
  }

  #projects .project-item{
    width: 1000px;
    height: 550px;
  }

  #projects .project-header{
    width: 1000px;
  }
}

@media (max-width: 768px) { 
  #projects {
    margin-left: 50px;
    margin-right: 50px;
  }

  #projects .project-item{
    width: 350px;
    height: 1300px;
  }

  #projects .project-header{
    width: 350px;
    align-items: center;
  }  

  #projects .project-header > h2{
    font-size: 20px;
  }  

  #projects .project-date {
    position: relative;
  }
}