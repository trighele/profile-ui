@import "../../../_variables.css";

#projects {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 100px;
  margin-left: 300px;
  margin-right: 300px;
}

#projects .project-item{
  background-color: #4E4C4C;
  display: flex; 
  flex-direction: column;
  height: 450px;
  width: 1550px;
  border-radius: 15px;
  -webkit-box-shadow: 5px 5px 15px 5px #000000; 
  box-shadow: 5px 5px 15px 5px #000000;
  border: 2px solid #000000;
  margin-bottom: 80px;
  flex-wrap: wrap;
}

#projects .project-header{
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  height: 100px;
  width: 1550px;
  -webkit-border-radius: 15px 15px 0px 0px;
  border-radius: 15px 15px 0px 0px;
  border-bottom: 2px solid #000000;
  font-family: 'JetBrains Mono';
}

#projects .project-date {
  background-color: #7E7777;
  position: absolute;  
  width: 110px;
  height: 35px;
  border-radius: 25px;
  border: 2px solid #000000;
  top: 10px;  
  right: 20px;
  font-size: 16px;
  font-weight: 700;
  font-family: "Noto Sans", sans-serif;
  display: flex;
  justify-content: center;
  align-items: center;
}

#projects .project-details {
  padding-left: 30px;
  padding-right: 30px;
}

.project-details h3 {
  font-size: 20px;
}

.project-details p {
  padding-bottom: 20px;
}

.project-details .project-keywords {
  display: flex;
  flex-wrap: wrap;
}

.project-keywords .keyword {
  border-radius: 25px;
  border: 2px solid #000000;  
  margin-right: 15px;
  margin-bottom: 10px; /* optional: spacing between rows */
  padding: 8px 15px;
  background-color: #7E7777;

  white-space: nowrap; /* keep text on one line */
  flex-shrink: 0;      /* prevent shrinking */  
}

.project-keywords .keyword:hover {
  box-shadow: 0 0 20px rgba(0, 150, 255, 0.7); /* outer glow */
}

.project-details hr {
  margin-top: 25px;
  margin-left: 15px;
  margin-right: 15px;
  margin-bottom: 15px;
  filter: blur(2px);
}

.project-details .project-links {
  display: flex;
  flex-wrap: wrap;  
}

.project-details .project-link a:link {
  text-decoration: none;
  color: #228BE6;
  display: flex;         
  align-items: center;   
  margin-right: 20px;
  margin-bottom: 10px;
  white-space: nowrap;
  flex-shrink: 0;   
}

.project-details .project-link a:visited {
  color: #228BE6;
}

.project-details .project-links-icon {
  width: 25px;
  height: 25px;
  display: inline-block;
  margin-right: 5px;
}



